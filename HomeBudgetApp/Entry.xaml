<Window x:Class="HomeBudgetApp.Entry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetApp"
        mc:Ignorable="d"
        Title="Entry" MinHeight="450" MinWidth="800" Height="450" Width="800" Foreground="{DynamicResource Text}" Background="{DynamicResource Background}"        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <ComboBox SelectionChanged="ComboBox_Themes_SelectionChanged" Margin="5" x:Name="ComboBox_Themes"></ComboBox>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock  Foreground="{DynamicResource Text}" HorizontalAlignment="Center"> Returning user.</TextBlock>

            <Button Foreground="{DynamicResource Text}"  Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>

            <TextBox Foreground="{DynamicResource Text}" Background="{DynamicResource TextBoxTheme}"  Name="txtEditor" />

            <TextBlock Foreground="{DynamicResource Text}"  HorizontalAlignment="Center" Margin="0,12,0,0"> New user.</TextBlock>

            <Button Foreground="{DynamicResource Text}"  Margin="2" Width="153" Name="saveNewDb" Click="newDb_Click">Save New Budget File as...</Button>

            <TextBox Foreground="{DynamicResource Text}" Background="{DynamicResource TextBoxTheme}" Name="selectedNewDbName" />

            <Button Foreground="{DynamicResource Text}"  Margin="10" Width="100" Name="goMain" Click="goMainPage_Click">Next step ></Button>

        </StackPanel>
    </Grid>
</Window>
