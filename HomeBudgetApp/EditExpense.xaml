<Window x:Class="HomeBudgetApp.EditExpense"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetApp"
        mc:Ignorable="d"
        Title="EditExpense" MinHeight="650" MinWidth="800" WindowStartupLocation="CenterScreen" Height="650" Width="800" Background="{DynamicResource Background}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <ComboBox SelectionChanged="ComboBox_Themes_SelectionChanged" Margin="30" x:Name="ComboBox_Themes"></ComboBox>
        <TextBlock Foreground="{DynamicResource Text}" Grid.Column="1" Text="Edit an Expense" FontWeight="Bold" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Grid Grid.Row="1" Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Margin="5" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Foreground="{DynamicResource Text}" Grid.Row="0" FontSize="25" Text="Name" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Foreground="{DynamicResource Text}" Background="{DynamicResource TextBoxTheme}" FontSize="20" Grid.Row="1" x:Name="exp_Name"/>
            </Grid>

            <Grid Margin="5" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Foreground="{DynamicResource Text}" Grid.Row="0" FontSize="25" Text="Date" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="1" FontSize="20" x:Name="exp_Date"/>
            </Grid>

            <Grid Margin="5" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Foreground="{DynamicResource Text}"  Grid.Row="0" FontSize="25" Text="Amount" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Foreground="{DynamicResource Text}" Background="{DynamicResource TextBoxTheme}" Grid.Row="1" FontSize="20" x:Name="exp_Amount"/>
            </Grid>

            <Grid Margin="5" Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Foreground="{DynamicResource Text}" Grid.Row="0" FontSize="25" Text="Category" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" x:Name="cmb_Categories"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Foreground="{DynamicResource Text}" Margin="20" Grid.Row="2" FontWeight="Bold" FontSize="20" Click="Btn_Save_Clicked">Save</Button>
            <Button Foreground="{DynamicResource Text}" Margin="20" Grid.Column="1" Grid.Row="2" FontWeight="Bold" FontSize="20" Click="Btn_Cancel_Clicked">Cancel</Button>
        </Grid>
    </Grid>
</Window>
